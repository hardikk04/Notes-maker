<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Notes Maker</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main h-[100vh] w-full bg-zinc-700 px-[2vw] py-[2vw]">
      <form action="/create" method="post">
        <input
          class="block text-white px-4 py-2 rounded-md w-full outline-none bg-zinc-500 mt-2"
          type="text"
          placeholder="Enter your Title"
          name="title"
        />
        <textarea
          class="block text-white px-4 py-2 w-full rounded-md outline-none resize-none bg-zinc-500 mt-2"
          placeholder="Enter your Description"
          name="description"
        ></textarea>
        <input
          class="mt-2 bg-blue-500 px-8 text-xl rounded-md text-white py-2"
          type="submit"
          value="submit"
        />
      </form>
      <div class="cards mt-12 flex gap-[1.2vw] flex-wrap">
        <% files.forEach((file)=>{%>
        <div class="card w-[16vw] bg-zinc-800 text-white rounded-md px-3 py-4">
          <h1 class="text-2xl font-[600]"><%= file.title %></h1>
          <p class="mt-2 tracking-tight">
            <% if(file.description.length < 15){ %> <%= file.description %> <%
            }else{ %> <%= file.description.substring(0,15) + "..." %> <% } %>
          </p>
          <div class="options flex justify-end mt-3 gap-6">
            <%if(file.description.length >15){ %>
            <a href="/read/<%= file.title %>" class="text-blue-500"
              >Read more</a
            >
            <%}%>
            <a href="/edit/<%= file.title %>" class="text-gray-400">Edit</a>
            <a href="/delete/<%= file.title %>" class="text-red-500">Delete</a>
          </div>
        </div>
        <%})%> <%if(files.length === 0){ %>
        <h1 class="text-2xl text-zinc-500 font-[600]">Create your notes...</h1>
        <%}%>
      </div>
    </div>
  </body>
</html>
